<View id="root" frame="0, 0, sys.contW, sys.contH">
    <View id="topContainer" frame="0, 0, sys.contW, sys.contH*0.9">
        <List id="widgetTableView" frame="0, 0, sys.contW, sys.contH*0.9" space="1" bg="0xeeeeee" showScrollIndicator="false"></List>
        <List id="sampleTableView" frame="0, 0, sys.contW, sys.contH*0.9" space="1" bg="0xeeeeee" showScrollIndicator="false" hide="true"></List>
        <View id="aboutView" frame="0, 0, sys.contW, sys.contH*0.9" css="{flex-direction='column'}" bg="0xffffff" hide="true">
            <View css="{flex=1, justify-content='center', align-items='center', margin-left=10, margin-right=10}">
                <Image css="{height=sys.contW/4, width=sys.contW/4}" image="luaview.png"></Image>
            </View>
            <Text id="info" css="{flex=1, margin-left=10, margin-right=10}" fontSize="16" lineCount="4" text="LuaView是一套跨平台的移动开发方案。我们致力于让开发者只写一份业务代码就可以在Android和iOS两个移动平台运行, 同时带来与Native开发相当的流畅度。"></Text>
            <View css="{flex-direction='column', flex=1}">
                <View css="{height=10}" bg="0xeeeeee"></View>
                <View css="{flex=1, flex-direction='row', margin-left=10, margin-right=10}">
                    <Text css="{flex=1}" textAlign="TextAlign.LEFT" text="QQ群" fontSize="14"></Text>
                    <Text css="{flex=1}" textAlign="TextAlign.RIGHT" text="539262083" fontSize="14"></Text>
                </View>
                <View css="{height=1, margin-left=10, margin-right=10, margin-left=10, margin-right=10}" bg="0xeeeeee"></View>
                <View css="{flex=1, flex-direction='row', margin-left=10, margin-right=10}">
                    <Text css="{flex=1}" textAlign="TextAlign.LEFT" text="官网" fontSize="14"></Text>
                    <Text css="{flex=3}" textAlign="TextAlign.RIGHT" text="https://alibaba.github.io/LuaViewSDK" fontSize="14"></Text>
                </View>
            </View>
            <Text css="{flex=1}" text="当前版本: 0.1.0" textAlign="TextAlign.CENTER" bg="0xeeeeee" fontSize="14"></Text>
        </View>
    </View>
    <View id="line" frame="0, sys.contH*0.9, sys.contW, 1" bg="0x000000" alpha="0.3"></View>
    <View id="bottomContainer" frame="0, sys.contH*0.9+1, sys.contW, sys.contH*0.1-1" css="{flex-direction='row'}">
        <Text id="widgetTab" css="{flex=1}" text="Widget" textAlign="TextAlign.CENTER" textColor="0xEB3131" fontSize="14"></Text>
        <Text id="sampleTab" css="{flex=1}" text="Sample" textAlign="TextAlign.CENTER" fontSize="14"></Text>
        <Text id="aboutTab" css="{flex=1}" text="About" textAlign="TextAlign.CENTER" fontSize="14"></Text>
    </View>
</View>